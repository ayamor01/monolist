<div class="ranking-title">
    "Want"されているものランキング<br>
    TOP10
</div>
<% @want_ranking_items.each_with_index do |item, i| %> 
<div class="<%= i+1 %>" >
    <div class="container">
        <div class="container-inner inner-sm clearfix">
            <div class='item-rank'>
                <span class="glyphicon glyphicon-king" aria-hidden="true"></span>
                <%= i+1 %>位
            </div>
            <div class="item-ranking-main">
                <div class="image">
                    <div class="img-wrap">
                        <% if item.large_image.present? %>
                          <%= image_tag(item.large_image , alt: item.title) %>
                        <% else %>
                          <%= image_tag("no-image.png" , alt: item.title) %>
                        <% end %>
                    </div>
                </div>
                <div class="title">
                    <%= item.title %>
                </div>
                <%= render 'items/action' , item: item %>
            </div>
        </div>
    </div>
</div>
<% end %>